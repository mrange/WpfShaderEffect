<Window x:Class="CsWpfShader.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CsWpfShader"
        mc:Ignorable="d"
        Title="MainWindow" Height="1080" Width="1600">
    <Grid>
        <Border x:Name="BackgroundEffect" Background="DarkGray"/>
        <Grid
          VerticalAlignment="Center"
          HorizontalAlignment="Center"
          CacheMode="BitmapCache"
          >
          <TextBlock
            Text="Silly things you can do with ShaderEffect"
            FontSize="64"
            Foreground="Black"
            >
            <TextBlock.RenderTransform>
              <TranslateTransform X="3" Y="3"/>
            </TextBlock.RenderTransform>
          </TextBlock>
          <TextBlock
            Text="Silly things you can do with ShaderEffect"
            FontSize="64"
            Foreground="White"
            />
        </Grid>
    </Grid>
</Window>
